<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Immersive">

    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarLight" parent="AppTheme">
        <item name="actionBarTheme">@style/Theme.AppCompat.Light.DarkActionBar</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>
        <item name="windowActionBar">true</item>
    </style>
</resources>
